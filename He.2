    <script>
        // Helper functions for scroll animations
        const elementInView = (el, percentageScroll = 100) => {
            const elementTop = el.getBoundingClientRect().top;
            return (
                elementTop <= 
                (window.innerHeight || document.documentElement.clientHeight) * (percentageScroll/100)
            );
        };

        const displayScrollElement = (element) => {
            element.classList.add('is-visible');
        };

        let scrollElements; 

        const handleScrollAnimation = () => {
            if (!scrollElements) return; 
            scrollElements.forEach((el) => {
                if (elementInView(el, 80)) { 
                    displayScrollElement(el);
                } 
            });
        };
        
        // Wait for the DOM to be fully loaded before running scripts
        document.addEventListener('DOMContentLoaded', function() {
            // Initialize Lucide Icons
            if (typeof lucide !== 'undefined' && typeof lucide.createIcons === 'function') {
                try {
                    lucide.createIcons();
                } catch (e) {
                    console.error('Error calling lucide.createIcons():', e);
                }
            } else {
                console.error('Lucide library not loaded correctly or lucide.createIcons is not a function.');
            }

            // Initialize scrollElements after DOM is ready
            scrollElements = document.querySelectorAll('.scroll-animate');
            
            // Initial check for elements in view when page loads
            handleScrollAnimation(); 

            // Attach scroll event listener for animations
            window.addEventListener('scroll', handleScrollAnimation);

            // Mobile menu setup
            const hamburgerButton = document.getElementById('hamburger-button');
            const mobileMenu = document.getElementById('mobile-menu');
            const closeMenuButton = document.getElementById('close-menu-button');
            const mobileMenuLinks = document.querySelectorAll('.mobile-menu-link');

            if (hamburgerButton && mobileMenu && closeMenuButton && mobileMenuLinks.length > 0) {
                hamburgerButton.addEventListener('click', () => {
                    mobileMenu.classList.toggle('open');
                    hamburgerButton.classList.toggle('open');
                });

                closeMenuButton.addEventListener('click', () => {
                    mobileMenu.classList.remove('open');
                    hamburgerButton.classList.remove('open');
                });

                mobileMenuLinks.forEach(link => {
                    link.addEventListener('click', () => {
                        mobileMenu.classList.remove('open');
                        hamburgerButton.classList.remove('open');
                        // Smooth scroll for mobile menu links is handled by the general smooth scroll logic
                    });
                });
            } else {
                console.warn('One or more mobile menu elements were not found in the DOM.');
            }
            
            // Smooth scroll for all anchor links starting with #
            document.querySelectorAll('a[href^="#"]').forEach(anchor => {
                anchor.addEventListener('click', function (e) {
                    const targetId = this.getAttribute('href');
                    
                    if (targetId === "#" || !targetId.startsWith("#")) {
                        return;
                    }
                    e.preventDefault(); 
                    
                    if (targetId.length > 1) { 
                        try {
                            const targetElement = document.querySelector(targetId);
                            if (targetElement) {
                                targetElement.scrollIntoView({
                                    behavior: 'smooth'
                                });
                            } else {
                                console.warn(`Smooth scroll target '${targetId}' not found.`);
                            }
                        } catch (err) {
                            console.error(`Error during smooth scroll to '${targetId}':`, err);
                        }
                    }
                });
            });

            // Contact form submission (simulation)
            const contactForm = document.getElementById('contactForm');
            const formMessage = document.getElementById('form-message');

            if (contactForm && formMessage) {
                contactForm.addEventListener('submit', function(e) {
                    e.preventDefault(); 
                    
                    formMessage.textContent = 'Enviando mensaje...';
                    formMessage.className = 'mt-4 text-center text-blue-600'; 

                    setTimeout(() => {
                        formMessage.textContent = '¡Gracias! Tu mensaje ha sido enviado con éxito.';
                        formMessage.className = 'mt-4 text-center text-green-600'; 
                        contactForm.reset(); 

                        setTimeout(() => {
                             formMessage.textContent = '';
                             formMessage.className = 'mt-4 text-center'; 
                        }, 5000);
                    }, 1000); 
                });
            } else {
                console.warn('Contact form or form message element not found.');
            }
            
            // Set current year in the footer
            const currentYearEl = document.getElementById('currentYear');
            if (currentYearEl) {
                currentYearEl.textContent = new Date().getFullYear();
            } else {
                console.warn('Current year element in footer not found.');
            }

            // --- Funcionalidad del Modal y Gemini API ---
            const aiExamplesModal = document.getElementById('aiExamplesModal');
            const modalTitleEl = document.getElementById('modalTitle');
            const modalContentEl = document.getElementById('modalContent');
            const modalLoadingEl = document.getElementById('modalLoading');
            const modalErrorEl = document.getElementById('modalError');
            const closeModalButton = document.getElementById('closeModalButton');
            const viewAiExamplesButtons = document.querySelectorAll('.view-ai-examples-button');

            const openModal = () => {
                if (!aiExamplesModal) return;
                aiExamplesModal.classList.remove('hidden');
                setTimeout(() => { 
                    aiExamplesModal.classList.remove('opacity-0');
                    const modalDialog = aiExamplesModal.querySelector('.modal-content');
                    if (modalDialog) modalDialog.classList.remove('scale-95');
                }, 10);
            };

            const closeModal = () => {
                if (!aiExamplesModal) return;
                aiExamplesModal.classList.add('opacity-0');
                const modalDialog = aiExamplesModal.querySelector('.modal-content');
                if (modalDialog) modalDialog.classList.add('scale-95');
                setTimeout(() => { 
                    aiExamplesModal.classList.add('hidden');
                }, 250);
            };

            if (closeModalButton) {
                closeModalButton.addEventListener('click', closeModal);
            }
            if (aiExamplesModal) {
                 aiExamplesModal.addEventListener('click', function(event) {
                    if (event.target === aiExamplesModal) { 
                        closeModal();
                    }
                });
            }


            viewAiExamplesButtons.forEach(button => {
                button.addEventListener('click', async function() {
                    const benefitCard = this.closest('.bg-white'); 
                    if (!benefitCard) return;
                    const benefitTitleElement = benefitCard.querySelector('.benefit-title');
                    const benefitDescriptionElement = benefitCard.querySelector('.benefit-description');

                    if (!benefitTitleElement || !benefitDescriptionElement) {
                        console.error("Benefit title or description element not found in card.");
                        return;
                    }
                    const benefitTitle = benefitTitleElement.textContent.trim();
                    const benefitDescription = benefitDescriptionElement.textContent.trim();


                    if (modalTitleEl) modalTitleEl.textContent = `Ejemplos para: ${benefitTitle}`;
                    if (modalContentEl) modalContentEl.innerHTML = ''; 
                    if (modalContentEl) modalContentEl.classList.add('hidden');
                    if (modalErrorEl) modalErrorEl.classList.add('hidden');
                    if (modalLoadingEl) modalLoadingEl.classList.remove('hidden');
                    
                    openModal();

                    const prompt = `Eres un asistente experto en healthtech y IA. Genera 3 ejemplos prácticos y concisos de cómo una plataforma de software de gestión clínica como HEALTSCOPEAI, que integra IA personalizada, puede aplicar el siguiente beneficio en el día a día de una clínica privada u hospital:
Beneficio: "${benefitTitle}"
Descripción del beneficio: "${benefitDescription}"
Enfócate en resultados tangibles y específicos para médicos, personal administrativo o pacientes. Formatea la respuesta como una lista HTML (ul/li). Asegúrate que cada ítem de la lista (<li>) esté bien formado y cerrado.`;
                    
                    try {
                        let chatHistory = [{ role: "user", parts: [{ text: prompt }] }];
                        const payload = { contents: chatHistory };
                        const apiKey = ""; 
                        const apiUrl = `https://generativelanguage.googleapis.com/v1beta/models/gemini-2.0-flash:generateContent?key=${apiKey}`;
                        
                        const response = await fetch(apiUrl, {
                            method: 'POST',
                            headers: { 'Content-Type': 'application/json' },
                            body: JSON.stringify(payload)
                        });

                        if (!response.ok) {
                            const errorData = await response.json();
                            console.error('Error from Gemini API:', errorData);
                            throw new Error(`API request failed with status ${response.status}: ${errorData?.error?.message || response.statusText}`);
                        }

                        const result = await response.json();
                        
                        let generatedText = "No se pudo obtener una respuesta formateada.";
                        if (result.candidates && result.candidates.length > 0 &&
                            result.candidates[0].content && result.candidates[0].content.parts &&
                            result.candidates[0].content.parts.length > 0) {
                            generatedText = result.candidates[0].content.parts[0].text;
                        } else {
                             console.warn("Respuesta de Gemini no contiene el texto esperado:", result);
                        }
                        
                        if (modalContentEl) {
                            let htmlContent = generatedText;
                            // Intenta una limpieza más robusta para asegurar que sea HTML válido si Gemini no devuelve HTML directo
                            if (!htmlContent.trim().startsWith('<ul') && !htmlContent.trim().startsWith('<p')) {
                                // Si no parece HTML, intenta convertirlo desde un formato de lista simple
                                htmlContent = htmlContent
                                    .split('\n') // Divide por líneas
                                    .map(line => line.trim()) // Quita espacios
                                    .filter(line => line.length > 0) // Quita líneas vacías
                                    .map(line => {
                                        // Asume que líneas con '-' o '*' son items de lista
                                        if (line.startsWith('- ') || line.startsWith('* ')) {
                                            return `<li>${line.substring(2)}</li>`;
                                        }
                                        return `<li>${line}</li>`; // Envuelve otras líneas como items de lista también
                                    })
                                    .join('');
                                if (htmlContent) {
                                     htmlContent = `<ul class="list-disc list-inside space-y-2">${htmlContent}</ul>`;
                                } else {
                                    htmlContent = "<p>No se generaron ejemplos válidos.</p>";
                                }
                            }
                            modalContentEl.innerHTML = htmlContent; // Asignar el contenido HTML
                            modalContentEl.classList.remove('hidden');
                        }

                    } catch (error) {
                        console.error('Error fetching AI examples:', error);
                        if (modalErrorEl) modalErrorEl.classList.remove('hidden');
                        if (modalContentEl) {
                            modalContentEl.innerHTML = `<p class="text-red-500">Error al generar ejemplos: ${error.message}</p>`;
                            modalContentEl.classList.remove('hidden');
                        }
                    } finally {
                        if (modalLoadingEl) modalLoadingEl.classList.add('hidden');
                    }
                });
            });
        });
    </script>
